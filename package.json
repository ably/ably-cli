{
  "name": "@ably/cli",
  "version": "0.2.4",
  "description": "Ably CLI for Pub/Sub, Chat, Spaces and the Control API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && rm -f tsconfig.tsbuildinfo && tsc",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md",
    "prepare": "npm run build && npm run prepack",
    "cli": "bin/run.js"
  },
  "author": "Ably <support@ably.com>",
  "license": "Apache-2.0",
  "bin": {
    "ably": "./bin/run.js"
  },
  "type": "module",
  "oclif": {
    "bin": "ably",
    "dirname": "ably",
    "commands": "./dist/commands",
    "topicSeparator": " ",
    "plugins": [
      "./dist"
    ],
    "hooks": {
      "init": "./dist/hooks/init/alias-command"
    },
    "hidden": [
      "aliases"
    ],
    "helpClass": "./dist/help.js"
  },
  "dependencies": {
    "@ably/chat": "^0.5.1",
    "@ably/spaces": "^0.4.0",
    "@oclif/core": "^4.2.10",
    "ably": "^2.6.5",
    "chalk": "5",
    "cli-table3": "^0.6.5",
    "inquirer": "^12.5.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "open": "^10.1.0",
    "ora": "^8.2.0",
    "react": "^19.0.0",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@oclif/test": "^3",
    "@types/chai": "^4",
    "@types/inquirer": "^9.0.7",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mocha": "^10.0.1",
    "@types/node": "^22.13.11",
    "@types/node-fetch": "^2.6.12",
    "chai": "^4",
    "mocha": "^11",
    "shx": "^0.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ably/cli.git"
  },
  "bugs": {
    "url": "https://github.com/ably/cli/issues"
  },
  "homepage": "https://github.com/ably/cli#readme",
  "keywords": [
    "ably",
    "cli",
    "realtime",
    "pubsub",
    "chat",
    "spaces"
  ],
  "publishConfig": {
    "access": "public"
  }
}
